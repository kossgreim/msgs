<div class="row">
    <div class="span4 offset4 well">
      <legend>Please Sign In</legend>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.email_field :email, :autofocus => true, :class => 'span4', placeholder: "Email" %>
        <%= f.password_field :password, :class => 'span4', placeholder: "Password" %>
        
        <% if devise_mapping.rememberable? -%>
          <%= f.label :remember_me, class: "checkbox" do %>
              <%= f.check_box :remember_me, :class => 'check-box' %> <%= f.label :remember_me %>
          <% end %>
        <% end -%>

        <%= f.submit "Sign in", :class=> "btn btn-info btn-block" %>
      <% end %> 
      <%= render "devise/shared/links" %>
    </div>
</div>


