<div class="profile_wrap">
	<div class="left_block">
		<div id="avatar">
			<%= image_tag @user.avatar(:thumb) %>
		</div>
	</div>
	<div class="right_block">
		<span class="user_name"><%= @user.name %>
			<span class="user-status"><%= check_user_status(@user.id) %></span>
		</span></br>
		<div class="user-bio">
			<%= @user.bio %>
		</div>
	</div>
</div>	